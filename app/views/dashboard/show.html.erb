<% content_for :title do %>
Dashboard
<% end %>
<% content_for :top_selection_bar do %>
  <% if @shows.count > 1 %>
    <% form_tag '/shows/change', :id => 'switch-form' do %>
      <% field_set_tag do %>
        <%= label_tag 'current_show', 'Show:', :id => 'auto-switch-label' %>
        <%= select_tag 'current_show', options_for_select(show_options(@shows), @current_show.id), :id => 'auto-switch', :onchange => 'this.form.submit();' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
