<!-- Do a form for creating shows -->
<% form_for @show, :html => { :id => 'add_record', :class => 'auxiliary ajaxed' } do | f | %>
<%  @show_form = f %>
<h2>Add Show</h2>
  <% field_set_tag do %>
    <%= render :partial => "form" %>
    <% field_set_tag nil, :class => "button_wrapper" do %>
      <%= f.submit 'Save', :class => "button" %>
    <% end %>
  <% end %>
<% end %>
