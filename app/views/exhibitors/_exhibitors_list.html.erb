<!-- EXHIBITORS LIST -->
<div class="content">
  <% if Exhibitor.count > 0 %>
    <table summary="List of Exhibitors" class="grid center">
      <col style="width:60px" />
      <col style="width:60px" />
      <col/>
      <col/>
      <col/>
      <col/>
      <col/>
      <col/>
      <col/>
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
          <th>Name</th>
          <th>Address</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Fax</th>
          <th>Cell</th>
          <th>In Show</th>
        </tr>
      </thead>
      <tbody>
        <% @exhibitors.each do | exhibitor | %>
        <tr id="exhibitor_<%= exhibitor.id -%>">
          <td><%= link_to('Edit', edit_exhibitor_path(exhibitor), :class => 'button_small insert') -%></td>
          <td><%= link_to('Delete', exhibitor_path(exhibitor), :class => 'button_small insert') -%></td>
          <td><%= format_name(exhibitor) -%></td>
          <td><%= format_address(exhibitor) -%></td>
          <td><%= exhibitor.email -%></td>
          <td><%= exhibitor.phone -%></td>
          <td><%= exhibitor.fax -%></td>
          <td><%= exhibitor.cell -%></td>
          <td><%= exhibitor_in_show(exhibitor, @current_show) -%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div style="padding:0 10px 10px 10px">
      <div class="message notice">
        <ul>
          <li>Click "Add Exhibitor" above to start adding new exhibitors.</li>
        </ul>
      </div>
    </div>
  <% end %>
</div>