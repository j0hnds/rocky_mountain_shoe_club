$('#record_manager').fadeOut('fast',function() {
  $(this).empty();
  $('#module_messages')
      .html("<%=escape_javascript(render_stickies)%>")
      .pulse({
              callback : function(){
                      $('#stores_list')
                              .css('display','none')
                              .html("<%= escape_javascript(render(:partial => "stores_list")) %>")
                              .fadeIn('fast');
              }
      });
});